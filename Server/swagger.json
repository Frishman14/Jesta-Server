{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Jesta",
      "description": "Jesta Backebd API",
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
      }
    },
    "host": "localhost:3000",
    "basePath": "/api/",
    "tags": [
      {
        "name": "Users",
        "description": "API for users in the system"
      }
    ],
    "schemes": [
      "http"
    ],
    "consumes": [
      "application/json"
    ],
    "produces": [
      "application/json"
    ],
    "paths": {
      "/users": {
        "post": {
          "tags": [
            "Users"
          ],
          "description": "Create new user in system",
          "parameters": [
            {
              "name": "user",
              "in": "body",
              "description": "User that we want to create",
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          ],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "New user is created",
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          }
        },
        "get": {
          "tags": [
            "Users"
          ],
          "summary": "Get all users in system",
          "responses": {
            "200": {
              "description": "OK",
              "schema": {
                "$ref": "#/definitions/Users"
              }
            }
          }
        }
      }
    },
    "definitions": {
      "User": {
        "required": [
          "email",
          "_id",
          "hashedPassword",
          "birthday"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "uniqueItems": true
          },
          "email": {
            "type": "string",
            "format": "email",
            "uniqueItems": true
          },
          "lastName": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "dateEmailVerified": {
            "type": "string",
            "format": "date"
          },
          "hashedPassword": {
            "type": "string",
            "format": "password"
          },
          "birthday": {
            "type": "string",
            "format": "date"
          },
          "phone": {
            "type": "string"
          },
          "phoneCountryCode": {
            "type": "string"
          },
          "address": {
              "country": {
                  "type": "string"
              },
              "city": {
                  "type": "string"
              },
              "street": {
                  "type": "string"
              }
          },
          "role" : {
              "enum": ["Admin", "Editor", "Client"]
          },
          "imagePath" : {
              "type": "string"
          },
          "created_date": {
            "type": "string",
            "format": "date"
          }
        }
      },
      "Users": {
        "type": "array",
        "$ref": "#/definitions/User"
      }
    }
  }